---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
---

<header>
	<h1>
		{SITE_TITLE}
	</h1>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/basi">Basi</HeaderLink>
		<HeaderLink href="/avanzato">Avanzato</HeaderLink>
		<HeaderLink
			href="https://github.com/gabrielemercolino/cardano-introduzione-web-dev"
			target="_blank"
		>
			GitHub
		</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h1 {
		margin: 0.5em 0;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: flex-start;
		gap: 1rem;
	}
	@media (orientation: portrait) {
		nav {
			justify-content: space-evenly;
		}
	}
</style>
